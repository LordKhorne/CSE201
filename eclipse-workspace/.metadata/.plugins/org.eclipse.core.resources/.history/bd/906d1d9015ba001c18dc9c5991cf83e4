public class CommentGUI extends JFrame {
	private JTextArea oldComments;
	private JTextField textField;
	public CommentGUI() {
		getContentPane().setLayout(null);
		
		JPanel main = new JPanel();
		main.setBounds(42, 5, 366, 155);
		getContentPane().add(main);
		main.setLayout(new BorderLayout(0, 0));
		
		JLabel title = new JLabel("Comment Section");
		title.setHorizontalAlignment(SwingConstants.CENTER);
		title.setFont(new Font("Georgia", Font.BOLD, 40));
		main.add(title, BorderLayout.NORTH);
		
		JButton newComment = new JButton("Post Comment");
		main.add(newComment, BorderLayout.EAST);
		
		textField = new JTextField();
		main.add(textField, BorderLayout.CENTER);
		textField.setColumns(10);
		
		oldComments = new JTextArea(5, 20);
		oldComments.setBounds(42, 174, 366, 80);
		getContentPane().add(oldComments);
		oldComments.setText(Comment.dispComments("test"));
		oldComments.setEditable(false);
		oldComments.setColumns(30);
		
		JLabel lblNewLabel = new JLabel("New label");
		lblNewLabel.setBounds(6, 122, 61, 16);
		getContentPane().add(lblNewLabel);
	}

	
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					CommentGUI frame = new CommentGUI();
					frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
					frame.setSize(800, 800);
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}
}
